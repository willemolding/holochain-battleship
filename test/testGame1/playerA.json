            "Time": 1000,
            "Convey": "Create a new game invitation",
            "Zome": "battleship",
            "FnName": "newInvitation",
            "Input": {
                "board": {
                    "pieces": [
                        {"x": 0, "y": 0, "orientation": "h"},
                        {"x": 3, "y": 2, "orientation": "v"},
                        {"x": 6, "y": 3, "orientation": "h"}
                    ]
                },
                "invitee": "%playerB_key%"
            },
            "Output": "%h1%"
        },
        {
            "Time": 1200,
            "Convey": "The invitation was linked to this nodes hash",
            "Zome": "battleship",
            "FnName": "getSentInvitations",
            "Raw": true,
            "Input": "getSentInvitations('%playerA_key%').length",
            "Regexp": "^0*[1-9][0-9]*$"
        },
        {
            "Time": 1400,
            "Convey": "The invitation was linked to other player",
            "Zome": "battleship",
            "FnName": "getReceivedInvitations",
            "Raw": true,
            "Input": "getReceivedInvitations('%playerB_key%').length",
